<div class="row">
    {{#each notas}}
    <div class="col-md-3 p-2">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title d-flex justify-content-between align-item-center">{{ title }} <a href="/notes/edit/{{_id}}"><i class="bi bi-pencil-square"></i><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
  <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
  <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z"/>
</svg></a> </h4>
                <p>{{ description }}</p>
                <p>{{ date }}</p>

                <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
                <input type="hidden" name="_method" value="DELETE">
                <div class="d-grid gap-2">
                    <button class="btn btn-danger btn-sm" type="submit">Delete</button>
                </div>
                </form>

            </div>
        </div>
    </div>
    {{else}}
    
    <div class="col-md-3 position-absolute top-50 start-50 translate-middle">
    <div class="card">
        <div class="card-body">
            <h1>Hello {{user.name}}</h1>
            <p class="lead">There are not notes yet.</p>
            <hr class="my-2">
            <div class="d-grid gap-2">
            <a href="/notes/add" class="btn btn-success">Add notes</a>
            </div>
        </div>
    </div>
    </div>
    
    
    {{/each}}
</div>