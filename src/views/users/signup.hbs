<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card p-2">
            <div class="card-header p-3">Account Register</div>
            <div class="card-body p-3">
                <form action="/users/signup" method="post">
                    <div class="form-group p-1"><input type="text" class="form-control" name="name" placeholder="Name" value="{{name}}"></div>
                     <div class="form-group p-1"><input type="email" class="form-control" name="email" placeholder="Email" value="{{email}}"></div>
                    <div class="form-group p-1"><input type="password" class="form-control" name="password" placeholder="Password" value="{{password}}"></div>
                    <div class="form-group p-1"><input type="password" class="form-control" name="confirm_password" placeholder="Password" value="{{confirm_password}}"></div>
                    <div class="form-group p-1"><div class="d-grid gap-2"><button type="submit" class="btn btn-primary">Signup</button></div></div>
                </form>
            </div>
        </div>
    </div>
</div>